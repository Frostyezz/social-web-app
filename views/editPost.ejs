<!DOCTYPE html>
<html lang="en">
<%- include('partials/head') %>
<body>
    <%- include('partials/navbar') %>
    <div class="d-flex align-items-center flex-column">
        <form action="/post/<%= post._id %>/edit?_method=PUT" class="card mt-3" method="post">
          <div class="card-body">
            <label for="exampleInputImg" class="form-label">Image</label>
            <input type="text" name="imgURL" class="form-control" id="exampleInputImg" aria-describedby="emailHelp" value="<%= post.imgURL %>">
            <div id="usernameHelp" class="form-text">Change your photo URL.</div>
          </div>
          <div class="card-body">
            <label for="exampleInputTitle" class="form-label">Title</label>
            <input type="text" name="title" class="form-control" id="exampleInputTitle" aria-describedby="emailHelp" value="<%= post.title %>">
            <div id="usernameHelp" class="form-text">Modify the title.</div>
          </div>
          <div class="card-body">
            <label for="exampleInputDesc" class="form-label">Description</label>
            <input type="text" name="description" class="form-control" id="exampleInputDesc" aria-describedby="emailHelp" value="<%= post.description %>">
            <div id="usernameHelp" class="form-text">Edit the post's description.</div>
          </div>
          <div class="card-body">
            <button type="submit" class="btn btn-light">Update</button>
          </div>
        </form>
      </div>
</body>
</html>